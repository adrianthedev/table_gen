<tr
  class="hover:bg-gray-50 hover:shadow-lg hover:z-[21] relative z-20 border-b"
  <%== item_selector_init @table %>
>
  <% if @table.record_selector %>
    <td class="w-10">
      <div class="flex justify-center h-full">
        <%== item_selector_input floating: false %>
      </div>
    </td>
  <% end %>

  <% if TableGen.configuration.table_controls_on_the_left? %>
    <td class="text-right whitespace-nowrap px-2" data-control="table-controls">
      <div class="flex items-center justify-end flex-grow-0 h-full w-full">
        <%= render TableGen::Table::Partials::TableControlsComponent.new(table: @table) %>
      </div>
    </td>
  <% end %>

  <% @table.get_columns.each_with_index do |column, index| %>
    <%= render column.component_for_view.new(
      column: column,
      table: @table,
      index: index,
    ) %>
  <% end %>

  <% if TableGen.configuration.table_controls_on_the_right? %>
    <td class="text-right whitespace-nowrap px-2" data-control="table-controls">
      <div class="flex items-center justify-end flex-grow-0 h-full w-full">
        <%= render TableGen::Table::Partials::TableControlsComponent.new(table: @table) %>
      </div>
    </td>
  <% end %>
</tr>
